{
  "root": true,
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "globals": {
    "React": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {},
  "plugins": [],
  "rules": {
    "no-unused-vars": 0,
    "react/no-unescaped-entities": 0
  },
  "ignorePatterns": [
    ".next/*",
    ".storybook/*",
    "node_modules/*",
    "out/*",
    "public/*",
    "*.lock",
    "tailwind.config.js"
  ]
}
